{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Attach to Python Functions",
      "type": "debugpy",
      "request": "attach",
      "port": 7071,
      "preLaunchTask": "start function app",
      "justMyCode": true,
      "host": "localhost",
      "pathMappings": [
          {
              "localRoot": "${workspaceFolder}/src/functionapp",
              "remoteRoot": "/home/vscode/src/functionapp"
          }
        ]
    }
  ]
}
