{
  "version": "0.2.0",
  "configurations": [
      {
        "name": "test streamlit app",
        "type": "debugpy",
        "request": "launch",
        "module": "streamlit",
        "args": [
          "run",
          "home.py"
        ],
        "cwd": "${workspaceFolder}/streamlit_app"
      },
      {
        "name": "test run (benchmark",
        "type": "debugpy",
        "request": "launch",
        "module": "benchmark_run",
        "args": [],
        "cwd": "${workspaceFolder}/tests/snowpark/benchmark/"
      },
      {
        "name": "test snowpark load_from_csv",
        "type": "debugpy",
        "request": "launch",
        "module": "load_from_csv",
        "args": [
          "--warehouse", "load",
          "--size", "${input:warehouse_size}",
          "--database", "MEETUP_GDDP",
          "--mode", "${input:load_mode}",
          "--tables_definition", "${input:load_from_csv_tbl_def}"
        ],
        "cwd": "${workspaceFolder}/tests/snowpark/load_from_csv/"
      }
    ],
  "inputs": [
        {
          "id": "warehouse_size",
          "type": "pickString",
          "description": "Select the size for the load",
          "options": ["MEDIUM", "LARGE"],
          "default": "MEDIUM"
        },
        {
          "id": "load_mode",
          "type": "pickString",
          "description": "Select the mode for the load",
          "options": ["parallel", "serial"],
          "default": "parallel"
        },
        {
          "id": "load_from_csv_tbl_def",
          "type": "pickString",
          "description": "Select the json entry to run",
          "options": [
            "./tpch_sf100.json",
            "./tpch_sf100_iceberg.json"
          ],
          "default": "${workspaceFolder}/tests/snowpark/load_from_csv/tpch_sf100.json"
        }
      ]
  }
